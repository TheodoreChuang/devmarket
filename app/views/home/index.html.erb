
<%# Welcome message %>
<h1 class="display-3 text-center">Welcome to DevMarket!</h1><br>

<%# Find buttons %>
<br>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <%= button_to "Find a Project", projects_path, :class => "btn btn-secondary btn-lg", :method => :get %>
    </div>
    <div class="col">
      <%= button_to "Post a Project", new_project_path, :class => "btn btn-secondary btn-lg", :method => :get %>
    </div>
  </div>
</div>
<br>
<%# Project's options - our available options to create a project %>
<br>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 img-thumbnail" src="https://codetheweb.blog/assets/img/posts/full-image-hero/cover.png" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 img-thumbnail" src="https://webdesignledger.com/wp-content/uploads/2016/07/What-Costs-Should-Website-Development-Budget-Cover.png" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 img-thumbnail" src="https://landerapp.com/blog/wp-content/uploads/2018/08/shutterstock_381746308.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<br>

