<%# Dev User info and Stats (overall rating)<br /> %>
<div class="container">
    <div class="row justify-content-center bg-white">
        <div class="col-sm-12 col-md-10">
            <h2 class="text-center"><%= @dev.name %> Profile</h2>
        </div>
    </div>

    <div class="row justify-content-center bg-white">
        <div class="col-sm-12 col-md-2 ">
            <div class="form-group text-center">
                <%= image_tag current_user.avatar_url, alt: "User Avatar Picture" unless current_user.avatar_url.nil? %>
            </div>
            <div class="form-group">
                <%= @dev.name %>
            </div>
            <div class="form-group">
                <%= @dev.company_name %>
            </div>
            <div class="form-group">
                <%= @dev.email %>
            </div>
            <div class="form-group">
                <%= @dev.phone_number %>
            </div>
            <div class="form-group">
                <%= @dev.city %>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 align-self-center">
            <div class="">
                <%= @dev.bio %>
            </div>
        </div>
    </div>
</div>

    <%# Dev can upload images of their works (thumbnails => full; max 6) %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 bg-white">
            Portfolio Picttures
        </div>
    </div>
</div>

    <%# List of Devâ€™s reviews %>
<div class="container">
    <div class="row justify-content-center">   
        <div class="col-sm-12 col-md-8 col-lg-6 bg-white">
            Dev's successful bids => projects => rating
        </div>
        
        <div>
            <%= link_to "Back", :back %>
        </div>
    </div>  
</div>
