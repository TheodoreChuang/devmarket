
<div class="container-fluid">
  <div class="header text-center mb-3">
  <h1>Project Information</h1>
  </div>

<div class="row">
  <div class="card mb-3 rounded p-5 mr-3 col-sm-10">
    <img class="card-img-top" src=".../100px180/" alt="Card image cap">
      <div class="card-body">
        <label for="project_overview"><strong>Project Overview</strong></label>
        <p class="project_overview"><%= @project.overview %></p>
        <label for="project_description"><strong>Project Description</strong></label>
        <p class="Project Description"><%= @project.description %></p>
        <label for="project_deadline"><strong>Project Deadline</strong></label>
        <p class="Project Deadline"><%= @project.deadline %></p>
        <label for="project_price"><strong>Project Price</strong></label>
        <p class="Project Price"><%= @project.price %></p>
        <label for="project_status"><strong>Project Status</strong></label>
        <p class="Project Status"><%= @project.status %></p>
          <div> 
            <button type="button" class="close btn btn-primary">
              <%= link_to "BID", project_bids_path(@project), method: :post %>
            </button>
          </div>
      </div>
  
  <%= link_to "Back to Projects", projects_path %>

  </div>

<%# --- CONTROL PANEL CLIENTS & DEVS --- %>
  <div>
    <%# FOR Client to manage their project %>
    <% if current_user.id == @project.user_id && @project.status == "ongoing" %>
      <%= link_to "Project Complete?", status_complete_project_path(@project), method: :post, data: { confirm: 'Project Complete?' }, class:"btn btn-warning"%>
    <% end %>

    <% if @project.status == "completed" %>  
      <span class="btn btn-success">Completed!</span>

      <%# --- Completed Project-Rated--- %>
      <% if @project.rating != nil %>
        <div class="card w-75">
          <div class="card-body">
            <span class="card-title">Ratings:</span> <%= @rated.rate %>
            <p class="card-text">
              <%= @rated.testimony %>
            </p>
            <%# TODO: route to bid accepted => dev %>
            <a href="#" class="btn btn-primary">To 'Dev' Profile</a>
          </div>
        </div>
      <% end %>
     <%# --- Completed Project-Not Yet Rated--- %>
      <% if @project.rating == nil && current_user.id == @project.user_id %>
          <%= render "ratings/form", project: @project, rating: @rating %>         
      <% end %>
    <% end %> 

    <%# FOR Dev to place a bid %>
    <% if current_user.user_type == "dev" && @project.status == "open" %>
      <%# PLACEHOLDER need method instead of link below %>
      <a href="#" class="btn btn-primary">Dev Places Bid</a>
    <% end %>
</div>

<%# --- LIST OF BIDS --- %>
<div>
  Bid 1
  <%# if current_user is owner %>
  <a href="#" class="btn btn-primary">Client Accepts?</a>
</div>
<div>
  Bid 2
  <a href="#" class="btn btn-primary">Client Accepts?</a>
</div>
<div>
  Bid 3
  <a href="#" class="btn btn-primary">Client Accepts?</a>
</div>

  <%= link_to "Back to Projects", projects_path %>
</div>